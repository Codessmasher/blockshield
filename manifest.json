{
  "name": "BlockShield",
  "version": "1.1",
  "description": "The extension will automatically know the ad pops up and then closes it, also it can close the ad banner",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "48": "images/favicon16.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/favicon16.png"
  }
}